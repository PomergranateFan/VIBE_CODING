{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "types": ["node"],
    "baseUrl": "."
  },
  "include": ["src/**/*", "drizzle.config.ts", "scripts/**/*.mjs"]
}
